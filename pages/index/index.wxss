/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height:100%; 
  padding:0px;
  font-family: roboto;
}

.banner {
 width:100%;
 background-size:cover;

}

.margin-top {
  margin-top: 10%;
margin-left: 20rpx;
font-weight: bold;

}

.card-container { 
  height:900rpx;
  margin:0rpx;
  width:100%;
}

.card {
 display:flex;
 height:18%;
 width:100%;
 border: 0.5rpx solid grey;
}

.avatar { 
  width: 100rpx;
  height: 100rpx;
  background-color:grey;
  margin:20rpx 10rpx 10rpx 10rpx;
  border-radius:4rpx;
}

.text {
  margin-top: 20rpx;
  margin-left:10rpx;

}
.price-grey {
  font-size:25rpx;
  padding-left: 260rpx;
  margin-top: 15rpx;  
}

.footer { 
  display:flex;
  justify-content: space-between;
}

.footer > image { 
  width: 30px;
  height: 30px;
  margin:70rpx;
}

